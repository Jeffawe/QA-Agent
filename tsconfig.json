{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",                                  
    "moduleDetection": "auto",
    "outDir": "./dist",                        

    /* Modules */
    "module": "nodenext",                               
    "rootDir": "./lib",                                 
    "moduleResolution": "nodenext",  
    "allowSyntheticDefaultImports": true,                  
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true, 
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
             

    /* Type Checking */
    "strict": true,                                     
    "skipLibCheck": true,    
    "incremental": true                             
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
