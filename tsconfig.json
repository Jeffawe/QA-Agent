{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",                                  
    "moduleDetection": "auto",
    "outDir": "./dist",                        

    /* Modules */
    "module": "es2020",                               
    "rootDir": "./",                                 
    "moduleResolution": "node10",                    
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          

    /* Type Checking */
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": ["lib/**/*"]
}
